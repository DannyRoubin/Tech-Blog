<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    {{! <button class="btn btn-primary">View this Blog!</button> }}
  </p>
  {{#if logged_in}}
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Comment:</h3>

      <form class="form new-comment-form">
        <div class="form-group">
          <label for="comment-desc">comment:</label>
          <textarea
            class="form-input"
            id="comment-desc"
            name="comment-desc"
          ></textarea>
        </div>
        <div class="form-group">
          <button
            type="submit"
            id="commentSubmit "
            class="btn btn-primary"
          >Create</button>
        </div>
      </form>
    </div>
    {{/if}}

    {{#if comments.length}}
      <div class="col-md-6 comment-list">
        <h3>Current Comments:</h3>

        {{#each comments as |comment|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <h4><a href="/comment/{{comment.id}}">{{comment.comment}}</a></h4>
            </div>
            <div class="col-md-4">
              <button
                class="btn btn-sm btn-danger"
                data-id="{{comment.id}}"
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>