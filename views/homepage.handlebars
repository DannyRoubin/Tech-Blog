<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog|}}
  <div class="row mb-4 blog border">
    <div class="col-12">
      <h2>
        <a href="/api/blog/{{blog.id}}">{{blog.blog_title}}</a>
      </h2>
    </div>
    <div class="col-md-12">
      <p>
        {{blog.blog_body}}
      </p>
    </div>
    <div class="col-12 text-right mt-0">
      <p class="side-note mb-0">Created by
        {{blog.user.name}}
        on
        {{format_date blog.blog_date}}</p>
    </div>
  </div>

{{/each}}